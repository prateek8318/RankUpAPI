	"item": [
		{
			"name": "üîê Send OTP",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Success response\", function () {",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson.success).to.be.true;",
							"    pm.expect(responseJson.message).to.include(\"OTP sent\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"mobileNumber\": \"1234567890\",\n    \"countryCode\": \"+91\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:5002/api/users/auth/send-otp",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "5002",
					"path": [
						"api",
						"users",
						"auth",
						"send-otp"
					]
				}
			}
		},
		{
			"name": "üîë Verify OTP & Get Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Login successful\", function () {",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson.success).to.be.true;",
							"    pm.expect(responseJson.message).to.include(\"Login successful\");",
							"    pm.expect(responseJson.token).to.be.a('string');",
							"    ",
							"    // Store token for subsequent requests",
							"    if (responseJson.token) {",
							"        pm.collectionVariables.set('authToken', responseJson.token);",
							"        pm.collectionVariables.set('userId', responseJson.userId);",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"mobileNumber\": \"1234567890\",\n    \"countryCode\": \"+91\",\n    \"otp\": \"1234\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:5002/api/users/auth/verify-otp",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "5002",
					"path": [
						"api",
						"users",
						"auth",
						"verify-otp"
					]
				}
			}
		},
		{
			"name": "üë§ Get User Profile",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Check if token exists",
							"if (!pm.collectionVariables.get('authToken')) {",
							"    console.log('Please run \"Verify OTP & Get Token\" first to get authentication token');",
							"}"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Profile data returned\", function () {",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson).to.have.property('id');",
							"    pm.expect(responseJson).to.have.property('phoneNumber');",
							"    pm.expect(responseJson).to.have.property('countryCode');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{authToken}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "http://localhost:5002/api/users/auth/profile/{{userId}}",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "5002",
					"path": [
						"api",
						"users",
						"auth",
						"profile",
						"{{userId}}"
					]
				}
			}
		},
		{
			"name": "üìù Update Profile (JSON)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Check if token exists",
							"if (!pm.collectionVariables.get('authToken')) {",
							"    console.log('Please run \"Verify OTP & Get Token\" first to get authentication token');",
							"}"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
